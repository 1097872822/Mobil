<view class="container">
    <view class='login-icon'>
        <image class="login-img" src="../../images/mobtitle.png"></image>
    </view>
    <view class="login-from">
        <form bindsubmit='formSubmit' class='form'>
            <!-- 账号 -->
            <view class="myno">
                <view class="weui-cell_input">
                    <view class="weui-cell_input2">
                        <view class="weui-cell__im">
                            <image class="nameImage" src="../../icons/uname.png"></image>
                        </view>
                        <view class="weui-cell__bd">
                            <input name="userno" class="weui-input" value='{{userno}}' placeholder='请输入学号'></input>
                        </view>
                    </view>
                </view>
            </view>
            <!-- 密码 -->
            <view class="mypwd">
                <view class="weui-cell_input">
                    <view class="weui-cell_input2">
                        <view class="weui-cell__im">
                            <image class="nameImage" src="../../icons/pwd.png"></image>
                        </view>
                        <view class="weui-cell__bd">
                            <input name="password" type="password" class="weui-input" value='{{password}}' placeholder='请输入密码' />
                        </view>
                    </view>
                </view>
            </view>
            <!-- 按钮 -->
            <view class="loginBtnView">
                <button class="loginBtn" size="{{primarySize}}" form-type='submit' disabled='{{disabled}}'>
                    登录
                </button>
            </view>
        </form>
    </view>
</view>
