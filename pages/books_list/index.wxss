page{
    height: 100%;
}
.book_item {
    height: 100%;
}

.book_item .book_container {
    margin: 0;
    padding: 0;
    height: calc(100vh-80rpx);
}

.book_item .book_container .up_menu {
    white-space: nowrap;
    padding: 0 12rpx;
    display: inline-block;
    font-size: 32rpx;
    width: 100%;
    box-sizing: border-box;
    background-color: #d81e06;


}

.book_item .book_container .up_menu .nav_up_items {
    display: inline-block;
    padding: 10rpx 0 4rpx 0;
    margin: 0 18rpx;
    color: rgba(255, 255, 255, 0.8);
    box-sizing: border-box;
}

.nav_up_items.active {
    border-bottom: 3px solid rgba(255, 255, 255, 0.7);
    color: rgba(255, 255, 255, 1);
}
.down_menu{
   
}

.first_tab{
    margin: 40rpx;
}
.books_list_de{
    display: flex;
    padding-bottom: 20rpx;
    border-bottom: 5rpx solid #ccc;
}
.books_img_warp{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;

}
.books_img_warp image{
    width: 80%;

}
.books_info_warp{
    flex: 2;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.rank_list_name_fir {
    font-size: 36rpx;
    font-weight: bolder;
    margin-bottom: 10rpx;
}

.rank_list_brief {
    font-size: 28rpx;
    color: dimgrey;
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp:3;
    -webkit-box-orient: vertical;
}
.book_class{
    margin-top: 10rpx;
}
.rank_list_class {
    border: rgb(68, 118, 212) 1rpx solid;
    border-radius:10rpx;
    padding: 5rpx;
    font-size: 23rpx;
    color: rgb(68, 118, 212);
}
.boaddco{
    display: flex;
    margin-top: 20rpx;
}
.bo{
    flex: 1;
    font-size: 25rpx;
    color: orangered;
}